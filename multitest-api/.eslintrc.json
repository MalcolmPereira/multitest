{
  "env": {
        "es6": true,
        "node": true
  },
  "extends": "eslint:recommended",
  "parser": "typescript-eslint-parser",
  "parserOptions": {
        "sourceType": "module"
  },
  "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": {
      "files": ["**/*.ts"],
      "parser": "typescript-eslint-parser",
      "rules": {
        "no-undef": "off"
      }
    }
}
